<configuration>
  <appender name="console-colors" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{MMM dd HH:mm:ss.SSS} [%logger{10}] [%thread] %highlight(%-5level) | %msg%n</pattern>
      <charset>UTF-8</charset>
    </encoder>
  </appender>

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{MMM dd HH:mm:ss.SSS} [%logger{10}] [%thread] %-5level | %msg%n</pattern>
      <charset>UTF-8</charset>
    </encoder>
  </appender>

  <root level="ALL">
     <appender-ref ref="console" />
  </root>
</configuration>
