<configuration>
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{MMM dd HH:mm:ss.SSS} [%logger{10}] [%thread] %highlight(%-5level) | %msg%n</pattern>
      <charset>UTF-8</charset>
    </encoder>
  </appender>

  <root level="ALL">
     <appender-ref ref="CONSOLE" />
  </root>
</configuration>
